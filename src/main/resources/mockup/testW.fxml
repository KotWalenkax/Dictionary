<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="-Infinity"
      maxWidth="-Infinity"
      minHeight="-Infinity"
      minWidth="-Infinity"
      prefHeight="400.0"
      prefWidth="600.0"

      fx:controller="Controllers.MainController"
      xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1">

   <Label text="Word" textOverrun="CENTER_ELLIPSIS">
      <font>
         <Font name="Arial Bold" size="16.0"/>
      </font>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
      </padding>
   </Label>
   <!-- Поле ввода слова -->
   <TextField
           fx:id="wordField"
           promptText="Type word">
      <font>
         <Font name="Arial" size="14.0"/>
      </font>
      <VBox.margin>
         <Insets left="10.0" right="10.0"/>
      </VBox.margin>
   </TextField>
   <Label text="Translate">
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
      </padding>
      <font>
         <Font name="Arial Bold" size="16.0"/>
      </font>
   </Label>
   <!-- Поле ввода перевода  -->
   <TextField
           fx:id="translateField"
           promptText="Type translate">
      <VBox.margin>
         <Insets left="10.0" right="10.0"/>
      </VBox.margin>
      <font>
         <Font name="Arial" size="14.0"/>
      </font>
   </TextField>
   <!-- Кнопка сохранения -->
   <Button
           fx:id="btnSave"
           mnemonicParsing="false"
           text="Save"
           onAction="#buttonSave">
      <font>
         <Font name="Arial Bold" size="16.0"/>
      </font>
      <VBox.margin>
         <Insets left="10.0" top="10.0"/>
      </VBox.margin>
   </Button>

</VBox>
